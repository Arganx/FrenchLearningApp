#:kivy 2.1.0
WindowManager:
    StartScreen:
    IndicativePresent:
    
<StartScreen>:
    name: "Start"
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height
        canvas.after:
            Rectangle:
                pos: self.center_x - 10, 0
                size: 20, self.height
        
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            padding: self.height/2 - 15
            Button:
                text: "Search for a random verb"
                size_hint: None, None
                pos_hint: {'center_x':.5, 'center_y': .5}
                height: 30
                width: 200
                on_release:
                    root.searchRandomVerb()


        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            padding: self.height/2 - 30
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            TextInput:
                id: verbInput
                hint_text:'être, avoir...'
                size_hint: None, None
                multiline: False
                pos_hint: {'center_x':.5, 'center_y': .5}
                width: 110
                height: 30
                halign: 'center'
            Button:
                text: "Search"
                size_hint: None, None
                #pos: self.parent.width/2, self.parent.height/2
                pos_hint: {'center_x':.5, 'center_y': .5}
                height: 30
                width: 90
                on_release: 
                    root.searchAVerb()

<IndicativePresent>:
    name: "IndicativePresent"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, None
            height: 50
            Label:
                id: verbName
                markup: True
            Label:
                id: verbNameEng
                markup: True
            Label:
                id: verbNamePl
                markup: True
            Button:
                text: "New random word"
                height: 30
                size_hint: 1, None
                pos_hint: {'center_x':.5, 'center_y': .5}
                on_release: 
                    root.newRandomWord()
            TextInput:
                id: verbInputInside
                hint_text:'être, avoir...'
                size_hint: None, None
                multiline: False
                pos_hint: {'center_x':.5, 'center_y': .5}
                height: 30
                halign: 'center'
            Button:
                text: "Search for a word"
                height: 30
                size_hint: 1, None
                pos_hint: {'center_x':.5, 'center_y': .5}
                on_release: 
                    root.searchForANewWord()
        TabbedPanel:
            id: mode
            do_default_tab: False

